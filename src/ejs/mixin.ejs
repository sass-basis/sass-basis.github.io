// Extend the underline from the center.
// This mixin use the pseudo-elements.
//
.u-extend-underline {
  position: relative;

  &::after {
    @include _extend-underline();
  }

  @include _hover() {
    &::after {
      width: 100%;
    }
  }
}</code></pre>
