<% var title = 'Get Started' %>
<% is_front_page = false %>
<% include _layout/_head %>
<body class="_l-body" data-sticky-footer="true">
<% include _object/_component/_page-effect %>
<div class="_c-drawer" data-c="drawer">

  <% include _object/_project/_drawer %>

  <div id="container" class="_l-container" data-l="container">
    <% include _layout/_header %>

    <div id="contents" class="_l-contents" data-l="contents">
      <% include _object/_project/_hero %>

      <main id="main" class="_l-main" role="main">

        <section class="c-section">
          <div class="_c-container">
            <h1 class="c-section__title">Using Yarn</h1>
            <p>
              Installs Basis
            </p>
            <pre><code>$ yarn install sass-basis</code></pre>
            <p>
              Imports Basis your Sass/SCSS.
            </p>
            <pre><code>/* If you want to use Basis classes */
@import node_modules/sass-basis/src/css/basis;

/* If you want to use Basis mixins only */
@import node_modules/sass-basis/src/css/basis-core;</code></pre>
            <p>
              Imports JavaScripts ( Require jQuery )
            </p>
            <pre><code>import 'node_modules/sass-basis/src/js/basis.js';</code></pre>
          </div>
        </section>

        <section class="c-section c-section--bg">
          <div class="_c-container">
            <h1 class="c-section__title">Download from GitHub</h1>
            <p>
              Download the basis from <a href="https://github.com/sass-basis/basis/releases" target="_blank">https://github.com/sass-basis/basis/releases</a>
            </p>
            <p>
              Imports Basis your Sass/CSS.
            </p>
            <pre><code>/* If you want to use Basis classes */
@import basis/src/css/basis;

/* If you want to use Basis mixins only */
@import basis/src/css/basis-core;</code></pre>
            <p>
              or Just this link.
            </p>
            <pre><code>&lt;link rel="stylesheet" href="basis/dist/css/basis.min.css"&gt;</code></pre>
            <p>
              Loads JavaScripts
            </p>
            <pre><code>&lt;script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"&gt;&lt;/script&gt;
&lt;script src="basis/dist/js/basis.min.js"&gt;&lt;/script&gt;</code></pre>
          </div>
        </section>

        <section class="c-section">
          <div class="_c-container">
            <h1 class="c-section__title">Sample for using classes</h1>
            <pre><code>&lt;a class=&quot;_c-btn _c-btn--block&quot;&gt;Btn&lt;/a&gt;</code></pre>
          </div>
        </section>

        <section class="c-section">
          <div class="_c-container">
            <h1 class="c-section__title">Sample for using abstracts</h1>
            <pre><code>.c-btn {
  _c-btn((
    background-color: #fff,
    border: 1px solid #ddd,
  ));

  &--block {
    display: block;
  }
}</code></pre>
            <pre><code>&lt;a class=&quot;c-btn c-btn--block&quot;&gt;Btn&lt;/a&gt;</code></pre>
          </div>
        </section>

        <section class="c-section">
          <div class="_c-container">
            <h1 class="c-section__title">Option</h1>
            <p>
              Support IE9 ( Not perfect )
            </p>
            <pre><code>&lt;!--[if lt IE 10]&gt;
&lt;link rel=&quot;stylesheet&quot; href=&quot;node_modules/sass-basis/dist/css/plugin/basis-ie9/basis-ie9.min.css&quot; /&gt;
&lt;![endif]--&gt;</code></pre>

            <p>
              And support IE8 ( Not perfect )
            </p>
            <pre><code>&lt;!--[if lt IE 9]&gt;
&lt;script src=&quot;node_modules/html5shiv/dist/html5shiv.js&quot;&gt;&lt;/script&gt;
&lt;![endif]--&gt;</code></pre>

            <p>
              If you are Sass/SCSS user and you want to use only mixins, importing this file.
            </p>
            <pre><code>@import node_modules/sass-basis/src/css/basis-core;</code></pre>
          </div>
        </section>

      </main>
    </div>

    <% include _layout/_footer %>
  </div>
</div>
<script src="/assets/js/app.min.js"></script>
</body>
</html>
